= render "layouts/header"
.bar
  新規会員登録
.wrap
  = form_with model: @user, url: profiles_path, class: 'wrap__new-user', method: :get, local: true do |f|
    = render "devise/shared/error_messages", resource: @user
    .wrap__new-user__field
      = f.label :nickname, "ニックネーム", class: "wrap__new-user__field__label"
      %br/
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例)タロー", class: "wrap__new-user__field__window"
    .wrap__new-user__field
      = f.label :email, "メールアドレス", class: "wrap__new-user__field__label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "wrap__new-user__field__window"
    .wrap__new-user__field
      = f.label :password, "パスワード", class: "wrap__new-user__field__label"
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上", class: "wrap__new-user__field__window"
    .wrap__new-user__field
      = f.label :password_confirmation, "パスワード確認", class: "wrap__new-user__field__label"
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一回", class: "wrap__new-user__field__window"
    .wrap__new-user__actions
      = f.submit  "次へ", class: "wrap__new-user__actions__btn"
= render "layouts/footer"
= render "devise/shared/links"
